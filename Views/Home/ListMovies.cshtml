@{
    ViewData["Title"] = "Movie List";
}

@model IEnumerable<MovieCollection.Models.Movie> 

<div class="container">
    <h1>Movie List</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Lent To</th>
                <th scope="col">Edited</th>
                <th scope="col">Notes</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>

        <!--display every movie in the collection-->
        <tbody>
            @foreach (MovieCollection.Models.Movie elem in Model)
            {
            // do not display Independence Day
            @if (elem.Title != "Independence Day")
            {
            <tr>
                <td scope="row">@elem.Title</td>
                <td>@elem.Year</td>
                <td>@elem.Director</td>
                <td>@elem.Rating</td>
                <td>@elem.LentTo</td>
                <td>@elem.Edited</td>
                <td>@elem.Notes</td>
                <td>
                    <form asp-action="EditMovie" method="get">
                        <input type="number" id="MovieId" name="MovieId" value="@elem.MovieId" hidden readonly />
                        <button type="submit" class="btn btn-secondary">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteMovie" method="post">
                        <input type="number" id="MovieId" name="MovieId" value="@elem.MovieId" hidden readonly />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            }
            }
        </tbody>
    </table>
</div>