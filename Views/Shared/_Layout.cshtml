<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>

<body>
    <!--navigation bar-->
    <div class="navbar navbar-expand-sm bg-light navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-action="Index" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a asp-action="Podcasts" class="nav-link">My Podcasts</a>
            </li>
            <li class="nav-item">
                <a asp-action="ListMovies" class="nav-link">Current Movie List</a>
            </li>
            <li class="nav-item">
                <a asp-action="EnterMovies" class="nav-link">Add Movie</a>
            </li>
        </ul>
    </div>

    <!--header-->
    <header>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Movie Collection</h1>
                <p class="lead">Save your favorite movies to a collection using this Web App!</p>
            </div>
        </div>
    </header>

    <!--body to render content-->
    <div>
        @RenderBody()
    </div>

    <!--footer with copyright-->
    <footer>
        <div class="footer fixed-bottom bg-light text-dark" style="margin-bottom: 0px; text-align: center;">
            <div class="container">
                <p class="lead">Copyright 2021 Justin Lawrence</p>
            </div>
        </div>
    </footer>
</body>
</html>
